@model Appointment.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<form method="post" asp-controller="Account" asp-action="ResetPasswordSubmit">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Reset Password</h3>
                </div>
                <div class="box-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @*<input asp-for="Token" type="hidden" />*@
                    <input asp-for="Email" type="hidden" value="@ViewBag.UserName" />
                    @*Entry Kanan*@
                    <div class="col-md-4">
                        <label asp-for="Email" class="control-label"></label>
                        <label class="form-control">@ViewBag.UserName</label>
                        <label asp-for="Password" class="control-label"></label>
                        <span asp-validation-for="Password" class="text-red text-bold"></span>
                        <input asp-for="Password" class="form-control" type="password" />
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-red text-bold"></span>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    </div>
                </div>
                <div class="box-footer">
                    <div class="form-group">
                        <input type="submit" value="Reset" class="btn btn-danger pull-right" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}