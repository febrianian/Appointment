@model Appointment.ViewModels.AppointmentDoctorViewModel

<form method="post" asp-controller="AppointmentDoctor" asp-action="MakeAppointment">
    <input type="hidden" asp-for="IdSpesialis" />
    <input type="hidden" asp-for="UserId" />
    <div class="row mt-5">
        <div class="col-md-6">
            <h4 class="float-left">@Model.Spesialis | @Model.DoctorName</h4>
        </div>
        <div class="col-md-6">
            <h4 class="float-right text-info">Appointment Form Request</h4>
        </div>
    </div>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-info">
                            <h5 class="text-white">Detail Identitas Diri</h5>
                        </div>
                        <div class="card-body bg-info">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label class="col-md-2 text-white" asp-for="Name">Name</label>
                                <div class=" col-md-10">
                                    <input asp-for="Name" readonly class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 text-white" asp-for="Email">Email</label>
                                <div class=" col-md-10">
                                    <input asp-for="Email" readonly class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 text-white" asp-for="Age">Age</label>
                                <div class=" col-md-2">
                                    <input asp-for="Age" readonly class="form-control" />
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 text-white" asp-for="PhoneNumber">Phone Number</label>
                                <div class=" col-md-10">
                                    <input asp-for="PhoneNumber" readonly class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 text-white" asp-for="Address">Address</label>
                                <div class=" col-md-10">
                                    <textarea rows="5" readonly asp-for="Address" class="form-control"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label class="col-md-2" asp-for="DateAppointment">Tanggal</label>
                            <div class=" col-md-3">
                                <input asp-for="DateAppointment" value="" class="form-control" />
                                <span asp-validation-for="DateAppointment" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2" asp-for="TimeAppointment">Jam</label>
                            <div class=" col-md-3">
                                <select asp-for="TimeAppointment" asp-items="ViewBag.Hours" class="form-control text-sm select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;"></select>
                                <span asp-validation-for="TimeAppointment" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2" asp-for="ReasonOfSick">Keluhan Patient</label>
                            <div class=" col-md-10">
                                <textarea rows="5" asp-for="ReasonOfSick" class="form-control"></textarea>
                                <span asp-validation-for="ReasonOfSick" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2" asp-for="HistoryOfSick">Sebutkan Riwayat Penyakit Anda</label>
                            <div class=" col-md-10">
                                <textarea rows="5" asp-for="HistoryOfSick" class="form-control"></textarea>
                                <span asp-validation-for="HistoryOfSick" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <a asp-controller="Home" asp-action="DashboardSpesialis" asp-route-idSpesialis="@Model.IdSpesialis" class="btn btn-primary btn-block float-left form-control col-md-2">Back</a>
                            <div class=" col-md-10">
                                <input type="submit" value="Submit Form" class="btn btn-primary form-control text-white" />
                            </div>
                        </div>
                        @*<label>@ViewBag.Message</label>*@
                    </div>
                </div>
            </div>

        </div>
    </div>

</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}