@model Appointment.ViewModels.RegisterViewModel

<form method="post">
    <h4>Edit Information</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Email" />
    <div class="form-group row">
        <label class="col-md-2" asp-for="Email"></label>
        <div class=" col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Name"></label>
        <div class=" col-md-10">
            <input type="Name" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>    
    <div class="form-group row">
        <label class="col-md-2">Action</label>
        <div class="col-md-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary form-control text-white">Back to List</a>
        </div>
        <div class="col-md-5">
            <input type="submit" value="Update" class="btn btn-primary text-white form-control" asp-controller="Account" asp-action="EditUser" asp-route-userName="@Model.Email" />
        </div>
    </div>
</form>
@section Scripts{

<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
    <partial name="_ValidationScriptsPartial" />
}

