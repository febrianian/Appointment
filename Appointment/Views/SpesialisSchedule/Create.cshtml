@model Appointment.ViewModels.SpesialisScheduleViewModel

<form method="post" asp-action="PostCreate" asp-controller="SpesialisSchedule">
    <h4>Schedule Spesialis</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="IdSpesialis">Spesialis Name</label>
        <div class=" col-md-10">
            <select asp-for="IdSpesialis" asp-items="ViewBag.Spesialist" class="form-control text-sm select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;"></select>
            <span asp-validation-for="IdSpesialis" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="UserId">Doctor Name</label>
        <div class=" col-md-10">
            <select asp-for="UserId" asp-items="ViewBag.DoctorList" class="form-control text-sm select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;"></select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="UserId">Hari</label>
        <div class=" col-md-10">
            <select asp-for="ScheduleDay" asp-items="ViewBag.DayList" class="form-control text-sm select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;"></select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="UserId">Jam</label>
        <div class=" col-md-5">
            <select asp-for="StartDate" asp-items="ViewBag.Hours" class="form-control text-sm select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;"></select>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class=" col-md-5">
            <select asp-for="EndDate" asp-items="ViewBag.Hours" class="form-control text-sm select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;"></select>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2">Action</label>
        <div class="col-md-5">
            <a asp-controller="SpesialisShcedule" asp-action="Index" class="btn btn-primary form-control text-white">Back to List</a>
        </div>
        <div class="col-md-5">
            <input type="submit" value="Save" class="btn btn-primary form-control text-white"/>
        </div>
    </div>
</form>

@section Scripts{
        <partial name="_ValidationScriptsPartial" />

}