@model Appointment.ViewModels.RegisterViewModel

<form method="post">
    <div class="container">
        <div class="card mt-5">
            <div class="card-header text-center">
                <h2>Details User</h2>
            </div>
            <input asp-for="Email" hidden="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-2">
                                <label asp-for="Name" class="col-form-label"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="Name" readonly="readonly" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                <label asp-for="Email" class="col-form-label"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="Email" readonly="readonly" class="form-control" />
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group row">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-5">
                                <input type="submit" asp-controller="Account" asp-action="Edit" asp-route-userName="@Model.Email" class="btn btn-primary form-control" value="Edit" />
                            </div>
                            <div class="col-md-5">
                                <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}